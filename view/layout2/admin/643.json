{
  "type": "object",
  "title": "站点配置",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "icp": {
      "type": "string",
      "description": "ICP 备案号"
    },
    "description":{
      "type":"string",
      "description": "站点描述"
    },
    "lang":{
      "type":"string",
      "description":"站点语言"
    },
    "keywords":{
      "type":"array",
      "description":"关键词",
      "items": {
        "type": "string"
      }
    },
    "site_url":{
      "type":"string",
      "description":"站点地址"
    },
    "copyright":{
     "type":"string",
      "description":"版权信息"
    },
    "stylesheet":{
      "type":"string",
      "description":"站点样式"
    },
    "theme_path":{
      "type":"string",
      "description":"网站主题路径"
    },
    "default_app":{
      "type":"string",
      "description":"默认应用"
    },
    "analyze_code":{
      "type":"string",
      "description":"统计代码"
    },
    "current_theme":{
      "type":"string",
      "description":"当前主题"
    },
    "default_index":{
      "type":"string",
      "description":"默认首页"
    },
    "password_salt":{
      "type":"string",
      "description":"密码盐"
    },
    "profile_cover":{
      "type":"object",
      "description":"个性化封面图"
    }
  },
  "description": "推荐内容"
}
